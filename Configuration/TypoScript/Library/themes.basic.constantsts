# cat=theme,basic//; type=string; label=LLL:EXT:theme_kom/Resources/Private/Language/Constants.xlf:favicon
themes.configuration.favicon = typo3conf/ext/theme_bootstrap/Resources/Public/Icons/favicon.ico

# cat=theme,basic//; type=string; label=Site slogan
themes.configuration.siteSlogan = Inspire people to share


# customsubcategory=spamProtect= SpamProtect

# Spam protect email addresses constants
#############################################

# cat=theme,advanced/spamProtect/a; type=string; label= E-Mail spam protection: @ replacement
