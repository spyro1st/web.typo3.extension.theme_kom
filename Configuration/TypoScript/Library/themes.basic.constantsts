# cat=theme,basic//; type=string; label=LLL:EXT:theme_kom/Resources/Private/Language/Constants.xlf:site_name
themes.configuration.siteName = TYPO3-Theme based on themes_gridelements

# cat=theme,basic//; type=string; label=LLL:EXT:theme_kom/Resources/Private/Language/Constants.xlf:baseurl
themes.configuration.baseurl = /

# cat=theme,basic//; type=string; label=LLL:EXT:theme_kom/Resources/Private/Language/Constants.xlf:baseurl_icon
themes.configuration.baseurlIcon = http://demo.typo3-themes.org/typo3conf/ext/theme_bootstrap/Resources/Public/Icons/

# cat=theme,basic//; type=string; label=LLL:EXT:theme_kom/Resources/Private/Language/Constants.xlf:baseurl_image
